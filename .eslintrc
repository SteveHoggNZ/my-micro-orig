{
  "parser": "babel-eslint",
  "plugins": [
    "promise"
  ],
  "env": {
    "browser" : false,
    "node" : true
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "semi"                 : ["error", "never"],
    "comma-dangle"         : ["error", "never"]
  }
}
